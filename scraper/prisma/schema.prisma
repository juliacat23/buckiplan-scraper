generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id               Int     @id @default(autoincrement())
  slug             String  @unique
  subject          String
  course_name      String  @unique
  course_title     String
  units            Float
  academic_group   String?
  academic_career  String?
  description      String
  multi_enroll     Boolean
  cross_list       String?
  terms            String
  course_attribute String?
  attribute_type   String?
}

model User {
  email     String  @unique
  id        Int     @id @default(autoincrement())
  firstName String?
  lastName  String?
  password  String
}
